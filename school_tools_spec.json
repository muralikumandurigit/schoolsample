{
  "websocket": {
    "url": "ws://localhost:8000/ws"
  },

  "tools": {
    "students.create": {
      "description": "Create a new student record in the school system.",
      "type": "websocket",
      "params": {
        "name": "string",
        "email": "string",
        "phone": "string",
        "grade": "string"
      }
    },

    "students.get": {
      "description": "Fetch details of a student using their ID.",
      "type": "websocket",
      "params": {
        "student_id": "integer"
      }
    },

    "students.update": {
      "description": "Update student details including name, email, phone, grade or fee payment status.",
      "type": "websocket",
      "params": {
        "student_id": "integer",
        "updates": {
          "name": "string?",
          "email": "string?",
          "phone": "string?",
          "grade": "string?",
          "fee_paid": "boolean?"
        }
      }
    },

    "students.delete": {
      "description": "Delete a student record by ID.",
      "type": "websocket",
      "params": {
        "student_id": "integer"
      }
    },

    "students.list": {
      "description": "List all students with pagination.",
      "type": "websocket",
      "params": {
        "skip": "integer?",
        "limit": "integer?"
      }
    },

    "students.fee_due": {
      "description": "List students who have pending fee payments.",
      "type": "websocket",
      "params": {}
    },

    "students.unpaid": {
      "description": "List students who have not paid any fees.",
      "type": "websocket",
      "params": {}
    },

    "students.partial_paid": {
      "description": "List students who have paid partially.",
      "type": "websocket",
      "params": {}
    },

    "students.by_grade": {
      "description": "List students belonging to a specific grade.",
      "type": "websocket",
      "params": {
        "grade": "string"
      }
    },

    "teachers.create": {
      "description": "Create a new teacher record.",
      "type": "websocket",
      "params": {
        "name": "string",
        "email": "string",
        "phone": "string",
        "subject": "string",
        "salary": "number"
      }
    },

    "teachers.get": {
      "description": "Get teacher details by ID.",
      "type": "websocket",
      "params": {
        "teacher_id": "integer"
      }
    },

    "teachers.update": {
      "description": "Update teacher details.",
      "type": "websocket",
      "params": {
        "teacher_id": "integer",
        "updates": {
          "name": "string?",
          "email": "string?",
          "phone": "string?",
          "subject": "string?",
          "salary": "number?"
        }
      }
    },

    "teachers.delete": {
      "description": "Delete a teacher record.",
      "type": "websocket",
      "params": {
        "teacher_id": "integer"
      }
    },

    "teachers.list": {
      "description": "List teachers with pagination.",
      "type": "websocket",
      "params": {
        "skip": "integer?",
        "limit": "integer?"
      }
    },

    "teachers.by_salary": {
      "description": "List teachers filtered by salary comparison.",
      "type": "websocket",
      "params": {
        "op": "string",
        "amount": "number"
      }
    },

    "teachers.by_grade": {
      "description": "List teachers assigned to a grade.",
      "type": "websocket",
      "params": {
        "grade": "string"
      }
    }
  }
}
